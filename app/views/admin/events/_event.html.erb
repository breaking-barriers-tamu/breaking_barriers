<div class = "e-partial" >

  <section class = "e-left"> 
    <div>
      <h1> <%= event.name %> </h1>
      <h3> <%= event.duration %> hours </h3>
    </div>

    <div>
        <%= event.description %>
    </div>

    <% if event.flier.attached? %>
      <% if event.flier.previewable? %>
          <%= image_tag event.flier.preview(resize_to_limit: [600,nil]) %>
      <% elsif event.flier.variable? %>
          <%= image_tag event.flier, class: "image_preview" %>
      <% end %>
      <br>
      <%= link_to "View/Download Flier", event.flier %>
      <%= button_to "Delete Flier Attachment", purge_flier_admin_event_path(event), method: :delete, confirm: "Are you sure?" %>
    <% else %>
        <%= "No Flier Attachments" %>
    <% end %>
  </section>

  <section class = "e-right" > 
    <div>

    </div>
    <div>
      <h2> Information </h2>
      <h4> <%= event.datetime.strftime("%B %d, %Y") %> </h4>
      <h4> <%= event.datetime.strftime("%I:%M %p") %> (CST) </h4>
      <h4> <%= event.location %> </h4>
    </div>
    <div>
      <% officer = event.officer %>
      <% if officer %>
        <h2> Contact Officer <h2>
          <h5> <%= officer.name %> </h5>
          <h5> <%= officer.phone_number %> </h5>
          <h5> <%= officer.email %> </h5>
      <% else %>
        <h2> No Officer In Charge </h2>
      <% end %>
    </div>
  </section>



</div>

  <p>
    <strong>Participants:</strong>
    <% event_logs = EventLog.where(event_id: event.id) %>
    <%= event_logs.length %>
  </p>
