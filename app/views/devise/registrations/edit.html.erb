<%= stylesheet_link_tag "registration" %>
<%= javascript_include_tag 'registration' %>

<div class="profile-container">
  <div class="reg-image">
  </div>
  <div class="forms">
    <div class="reg-title">
        <h1>Registration</h1>
        <p>Please fill in your information below</p>
    </div>
    <div class="profile-form">

      <div class="current-user-display">

          <%= image_tag @user.avatar_url || 'user-solid.svg', alt: "#{@user.name}'s Avatar", width: 150 %>

           <p><%= current_user.email %></p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: "false" }   }) do |f| %>
          <div class="row-1">
            <div class="first-name-field">
                <%= f.label :first_name %>
                <%= f.text_field :first_name %>
            </div>

            <div class="last-name-field">
                <%= f.label :last_name %>
                <%= f.text_field :last_name %>
            </div>
          </div>

          <div class="row-2">
            <div class="phone-field">
              <%= f.label :phone_number %>
              <%= f.telephone_field :phone_number, id: "phone-number" %>
            </div>

            <div class="year-field">
                <%= f.label :year %>
                <%= f.select :year, (Date.today.year-10..Date.today.year+10).to_a.reverse, prompt: 'Select Year' %>
            </div>
          </div>
      
          <div class="row-3">
            <%= f.submit "Register Account" %>
          </div>

      <% end %>
    </div>
  </div>

</div>
