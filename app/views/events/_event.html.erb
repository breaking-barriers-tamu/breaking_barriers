<div id="<%= dom_id event %>">
  <p>
    <strong>Name:</strong>
    <%= event.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= event.date.strftime("%B %d, %Y") %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= event.time.strftime("%I:%M %p") %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= event.duration %> hours
  </p>

</div>
