<%= render @event %>
<strong>Officer In Charge: </strong>
    <% if @event.officer %>
      <%= link_to @event.officer.name, user_path(@event.officer) %>
    <% else %>
      No officer assigned
    <% end %>
  <br>

<strong> Event Flier: </strong> <br>
<% if @event.flier.attached? %>
    <% if @event.flier.representable? %>
        <%= image_tag @event.flier.representation(resize_to_limit: [500,500]) %>
        <br>
    <% end %> 
    <%= link_to "View/Download Flier", @event.flier %>
<% else %>
    <%= "No Attachments" %>
<% end %>


<% if @event.is_active? %>
  <% if @event_log.any?%>
  <br>
    <div>
      <h3>
        <% if @event_log.first.participating %>
          You are confirmed for this event! 

        <% else %>
          <% if @event_log.first.confirmed == false %>
          Confirmation pending. Once an admin approves you for this event, you will receive an email in your TAMU inbox
          <% else %>
          Your request to participate in this event has been denied!
          <% end %>
        <% end %>
      </h3>

      <% if @event_log.first.confirmed == false %>
        <%= link_to "Remove my request to sign up to volunteer for this event", delete_event_log_path(EventLog.where(user: current_user, event: @event).first)%>
      <% end %>
    </div>
  <% else %>
    <div>
      <%= link_to "Sign up to volunteer for this event", new_event_log_path(user_id: current_user.id, event_id: @event.id, hours: @event.duration)%>
    </div>
  <% end %>
<% end %>
<div>
  <%= link_to "Back to events", events_path %>
</div>
